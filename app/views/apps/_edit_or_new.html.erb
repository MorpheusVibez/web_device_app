<%= form_for(@app) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <br>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <br>
      <br>
      <%= f.label :category %>
      <%= f.text_field :category %>
      <br>
      <br>
      <%= f.label "Storage Space" %>
      <%= f.number_field :storage_size_in_MB %> MB
      <br>
      <br>
            <%= display_name(@app, @path) %>
            <%= user_select(@app, @path) %>
      <%= f.submit "Confirm" %>
    
      
<% end %>
<%= form_for([current_user, @device]) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <br>
      <%= f.label "Storage Space "%>
      <%= f.number_field :storage_size_in_GB %> GB
      <br>
      <br>
      <%= f.label :color %>
      <%= f.text_field :color %>
      <br>
      <br>
      <%= f.label 'Add to User'%>
      <%= f.check_box 'user_id'%>
      <%= f.submit "Confirm" %>
<% end %>